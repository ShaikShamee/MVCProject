@model DBFirstApproach.Models.Pager
@{
    ViewData["Title"] = "Pagination";
}

@*<h1>Pagination</h1>*@

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.TotalPages > 1)
            {
                <li class="page-item">
                    <a link asp-controller="Customer" asp-action="" asp-route-pg="1">Frist</a>
                </li>
                <li>
                    <a class="page-link" link asp-controller="Customer" asp-action="GetAllCustomers" asp-route-pg="">Frist</a>
                </li>

            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" link asp-controller="Customer" asp-action="GetAllCustomers" asp-route-pg="@pge"> @pge </a>
                </li>

            }
            @if (Model.CurrentPage > Model.TotalPages)
            {
                <li class="page-item">
                    <a link asp-controller="Customer" asp-action="GetAllCustomers" asp-route-pg="@(Model.CurrentPage+1)">Next</a>
                </li>
                <li>
                    <a class="page-link" link asp-controller="Customer" asp-action="GetAllCustomers" asp-route-pg="@(Model.TotalPages)">Last</a>
                </li>

            }
        </ul>
    }

</div>